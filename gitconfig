[core]
	editor = nvim
	pager = diff-so-fancy | less --tabs=4 -RFX
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[interactive]
	diffFilter = diff-so-fancy --patch
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[alias]
    a = add
    aa = add --all
    amend = commit --amend --reuse-message=HEAD
    b = branch
    bd = branch --delete
    c = commit
    cv = commit --verbose
    cl = clone
    cn = config
    cng = config --global
    cp = cherry-pick -x
    # Remove branches that have already been merged with main
    dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
    f = fetch
    # Pretty log of commits. Supports options of git log
    # The 8-char abbreviation works well with the default pretty format below
    l = log --abbrev-commit --abbrev=8
    lg = log --abbrev-commit --abbrev=8 --graph
    m = merge
    mt = mergetool
    p = push
    pl = pull --ff-only --rebase
    r = remote
    rb = rebase
    rs = reset
    s = status --short --branch
    sh = show
    sw = switch
    swc = switch --create
    st = stash
    t = tag
    upstream = reset --soft @{u}
